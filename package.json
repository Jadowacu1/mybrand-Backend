    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "chai": "^4.3.4",
    "chai-http": "^4.4.0",
    "dotenv": "^16.4.5",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4",
